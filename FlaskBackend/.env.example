# Example environment configuration for Flask Backend

# MongoDB connection string (SRV or standard)
# e.g. mongodb://localhost:27017 or mongodb+srv://user:pass@cluster.example.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017

# Database name containing the devices collection
MONGODB_DB_NAME=netweb

# Collection name that stores device documents
MONGODB_COLLECTION_NAME=devices
